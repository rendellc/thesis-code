<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_car">
    <xacro:property name="wheel_mass" value="50"/>
    <xacro:property name="wheel_radius" value="0.5"/>
    <xacro:property name="wheel_length" value="0.3"/>
    <xacro:property name="body_mass" value="50"/>
    <xacro:macro name="link_box" params="name mass length width height">
        <link name="${name}">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="${mass}"/>
                <inertia ixx="${1/12*mass*(height**2 + width**2)}" ixy="0" ixz="0" 
                    iyy="${1/12*mass*(height**2 + length**2)}" iyz="0"
                    izz="${1/12*mass*(length**2 + width**2)}"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${length} ${width} ${height}"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${length} ${width} ${height}"/>
                </geometry>
            </collision>
        </link>
    </xacro:macro>
    <xacro:macro name="wheel" params="name parent mass radius length xyz">
        <link name="${name}_base">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="20"/>
                <inertia ixx="1" ixy="0" ixz="0" 
                    iyy="1" iyz="0"
                    izz="1"/>
            </inertial>
            <visual>
                <geometry>
                    <box size="0.3 0.3 0.3"/>
                </geometry>
            </visual>
        </link>
        <link name="${name}_tire">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="${mass}"/>
                <inertia ixx="${1/12*mass*(3*radius**2 + length**2)}" ixy="0" ixz="0" 
                    iyy="${1/12*mass*(3*radius**2 + length**2)}" iyz="0"
                    izz="${1/2*mass*radius**2}"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="${radius}" length="${length}"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <cylinder radius="${radius}" length="${length}"/>
                </geometry>
            </collision>
        </link>
        <joint name="joint_${parent}_to_${name}_base" type="continuous">
            <origin xyz="${xyz}" rpy="0 0 0"/>
            <parent link="${parent}"/>
            <child link="${name}_base"/>
            <axis xyz="0 0 1"/>
        </joint>
        <joint name="joint_base_to_${name}_tire" type="continuous">
            <origin xyz="0 0 -1" rpy="${pi/2} 0 0"/>
            <parent link="${name}_base"/>
            <child link="${name}_tire"/>
            <axis xyz="0 0 1"/>
        </joint>
        <gazebo reference="${name}_base">
            <material>Gazebo/Blue</material>
        </gazebo>
        <gazebo reference="${name}_tire">
            <material>Gazebo/Orange</material>
            <mu1>0.8</mu1>
            <mu2>0.5</mu2>
        </gazebo>
    </xacro:macro>
    <xacro:macro name="wheel_joint" params="parent child xyz">
    </xacro:macro>

    <xacro:link_box name="base_link" mass="${body_mass}" length="2" width="0.8" height="0.5"/>
    <xacro:wheel name="wheel_fl" parent="base_link" mass="${wheel_mass}" radius="${wheel_radius}" length="${wheel_length}" xyz="2 2 0"/>
    <xacro:wheel name="wheel_rl" parent="base_link" mass="${wheel_mass}" radius="${wheel_radius}" length="${wheel_length}" xyz="-2 2 0"/>
    <xacro:wheel name="wheel_rr" parent="base_link" mass="${wheel_mass}" radius="${wheel_radius}" length="${wheel_length}" xyz="-2 -2 0"/>
    <xacro:wheel name="wheel_fr" parent="base_link" mass="${wheel_mass}" radius="${wheel_radius}" length="${wheel_length}" xyz="2 -2 0"/>
</robot>
